<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Simple Servlet Application</display-name>
    <servlet>
        <servlet-name>productServlet</servlet-name>
        <servlet-class>controller.ProductRegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productServlet</servlet-name>
        <url-pattern>/newProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>controller.MainPageServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>controller.SignInServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>controller.SignUpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionCloseServlet</servlet-name>
        <servlet-class>controller.SessionClose</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SessionCloseServlet</servlet-name>
        <url-pattern>/MainPage</url-pattern>
    </servlet-mapping>
</web-app>